{
    "name": "instock-webapp",
    "version": "1.0.0",
    "description": "Inventory management web application",
    "engines": {
      "node": "18.x",
      "npm": "9.x"
    },
    "scripts": {
      "start": "node in-stock-app/server/index.js",
      "build": "cd client && npm install && npm run build",
      "heroku-postbuild": "npm run build",
      "dev": "concurrently \"cd client && npm start\" \"cd in-stock-app/server && npm run dev\"",
      "test": "echo \"Error: no test specified\" && exit 1"
    },
    "dependencies": {
      "express": "^4.18.2",
      "mysql2": "^3.9.7",
      "cors": "^2.8.5"
    },
    "devDependencies": {
      "concurrently": "^8.2.2"
    }
  }